---
import { Post } from '../lib/interfaces.ts'
import { getPostLink } from '../lib/blog-helpers.ts'

export interface Props {
  post: Post
  enableLink: boolean
}

const { post, enableLink = true } = Astro.props

let title = post.Title
---

<h3 class="post-title">
  {
    enableLink ? (
      <a href={getPostLink(post.Slug)}>
        {post.Icon && post.Icon.Type === 'emoji' ? (
          <>
            <span class="emoji">{post.Icon.Emoji}</span>
            <span class="title">{title}</span>
          </>
        ) : post.Icon && post.Icon.Type === 'external' ? (
          <>
            <img src={post.Icon.Url} />
            <span class="title">{title}</span>
          </>
        ) : (
          title
        )}
      </a>
    ) : (
      <>
        {post.Icon && post.Icon.Type === 'emoji' ? (
          <>
            <span class="emoji">{post.Icon.Emoji}</span>
            <span class="title">{title}</span>
          </>
        ) : post.Icon && post.Icon.Type === 'external' ? (
          <>
            <img src={post.Icon.Url} />
            {title}
          </>
        ) : (
          title
        )}
      </>
    )
  }
</h3>

<style lang="scss">
  .post-title {
    padding: 0.2rem 0 0;
    font-size: 1.75rem;
    font-weight: 500;
    color: var(--fg);
    display: flex;
    align-items: center;
    a {
      display: flex;
      align-items: center;
      font-size: 1.6rem;
      color: inherit;
      .emoji {
        font-size: 1.1em;
        background: #ffffff;
        width: 12vw;
        height: 12vw;
        max-width: 60px;
        max-height: 60px;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 4px;
      }
      .title {
        font-size: 1.08rem;
        flex: 1;
      }
    }
    >.emoji {
      font-size: 1.5rem;
    }
    span,
    img {
      display: inline-block;
      margin-right: 0.4em;
    }
    span {
      //font-size: 1.2em;
    }
    img {
      width: 1.3em;
      height: 1.3em;
      vertical-align: sub;
    }
  }
  @media (max-width: 640px) {
    .post-title {
      font-size: 1.1rem;
      a {
        font-size: 1.08rem;
      }
    }
  }
</style>
