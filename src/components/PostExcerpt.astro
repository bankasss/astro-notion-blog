---
import { Post } from '../lib/interfaces.ts'

export interface Props {
  post: Post
}

const { post } = Astro.props
---

<div class="post-excerpt">
  <p>{post.Excerpt ? post.Excerpt : ''}</p>
</div>

<style lang="scss">
  .post-excerpt {
    padding: 0.2rem 0;
    font-size: 1rem;
    p {
      margin: 0;
    }
  }

</style>
